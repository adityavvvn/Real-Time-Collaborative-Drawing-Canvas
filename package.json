{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-time collaborative drawing canvas application",
  "main": "server/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "npm run build && node dist/server/server.js",
    "dev": "npm run build && nodemon dist/server/server.js",
    "install-deps": "npm install"
  },
  "keywords": [
    "canvas",
    "collaborative",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  }
}

